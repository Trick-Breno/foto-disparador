<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#000">

    <!-- Menos espaço acima -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="180dp"
     />

    <!-- Botão azul -->
    <Button
        android:id="@+id/btnManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_manual"
        android:textSize="16sp"
        android:padding="14dp"
        android:textColor="#FFF"
        android:background="@drawable/button_azul"
        android:layout_marginBottom="24dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:text="@string/titulo_automacao"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etIntervalo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_intervalo"
        android:textColor="#FFF"
        android:textColorHint="#AAA"
        android:backgroundTint="#FFF"
        android:layout_marginBottom="16dp"/>

    <!-- Botões lado a lado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnComecar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/botao_comecar"
            android:textSize="16sp"
            android:textColor="@drawable/button_text_color_verde_ativo"
            android:background="@drawable/button_verde"
            android:layout_marginEnd="8dp"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btnParar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/botao_parar"
            android:textSize="16sp"
            android:textColor="@drawable/button_text_color_laranja_ativo"
            android:background="@drawable/button_laranja"
            android:layout_marginStart="8dp"
            android:padding="14dp"/>
    </LinearLayout>
</LinearLayout>
